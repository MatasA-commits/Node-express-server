{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
